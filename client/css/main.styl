// STRUCUTRE

$margin-small = 10px
$margin-tiny = ($margin-small/2)
$margin-basic = ($margin-small*2)
$margin-large = ($margin-small*5)

$border-width = 2px

// COLORS

$color-black-soft = rgb(14,14,14)
$color-white-soft = rgb(253,253,253)
$color-white-smoke = rgb(247, 247, 247)

$color-gray = gray
$color-dark-gray = rgb(100,100,100)

$color-light-green = rgb(245, 250, 248)

$color-light-pink = rgb(255, 216, 210)
$color-dark-pink = rgb(254, 104, 107)

html
  background-color: $color-white-smoke
  color: $color-black-soft

// TYPOGRAPHY

$font-light = 'WorkSansLight', sans-serif
$font-bold = 'WorkSansBold', sans-serif

$font-size-basic = 19px
$font-leading-basic = 1.4em

$font-size-h1 = 40px
$font-size-h2 = 30px
$font-size-h3 = 14px

html
  font-family: $font-light
  font-size: $font-size-basic
  line-height: $font-leading-basic

  // HEADINGS

h1
  font-size: $font-size-h1

h2
  font-size: $font-size-h2

h3
  font-family: $font-bold
  font-size: $font-size-h3
  background-color: $color-dark-gray
  padding: $margin-tiny $margin-small
  color: $color-white-soft
  text-transform: uppercase
  margin-bottom: $margin-small

h1,h2,h3,h4,h5,h6
  line-height: $font-leading-basic

  // LINKS

a,a:active,a:visited
  color:inherit
  text-decoration: none
  transition:opacity .2s
  &:hover
    opacity:.5

// TOOLBAR

#toolbar
  padding: $margin-small
  border-bottom: solid $border-width $color-dark-gray
  background-color: $color-light-green
  margin-bottom: $margin-basic

.logo-col
  text-align: center
  img.logo
    width: 120px

// FORM

form
  padding: 0 $margin-small

input
  margin-bottom: $margin-small
  font-family: $font-light
  box-sizing: border-box
  padding: $margin-small
  border-radius: 4px
  width: 100%
  font-size: 1em
  border: solid $border-width $color-gray
  cursor: pointer
  &:focus
    outline: 0

::-webkit-input-placeholder
  text-align: right

input:-moz-placeholder
  text-align: right

input.button
  border-width: 0 0 $border-width 0
  font-family: $font-bold

// SETTINGS

.settings-button
  padding: $margin-small
  margin-bottom: $margin-small
  border: solid $color-gray
  border-width: $border-width 0
  display: block
  text-transform: uppercase
  .genericon
    float: right