// STRUCUTRE

$margin-small = 12px
$margin-tiny = ($margin-small/2)
$margin-basic = ($margin-small*2)
$margin-large = ($margin-small*5)

$border-width = 1px

.container
  margin-top: $margin-small

// TIMING

$speed-basic = 500

// COLORS

$color-black-soft = rgb(14,14,14)
$color-white-soft = rgb(253,253,253)
$color-white-smoke = rgb(247, 247, 247)

$color-light-gray = rgb(204,204,204)
$color-gray = rgb(132,132,132)
$color-dark-gray = rgb(100,100,100)

$color-light-green = rgb(244, 237, 231)
$color-dark-green = rgb(239, 232, 212)

$color-light-pink = rgb(255, 216, 210)
$color-dark-pink = rgb(254, 104, 107)

$color-light-blue = rgb(245, 250, 248)

html
  background-color: $color-white-smoke
  color: $color-black-soft

// TYPOGRAPHY

$font-light = 'WorkSansLight', sans-serif
$font-semibold = 'WorkSansSemiBold', sans-serif
$font-bold = 'WorkSansBold', sans-serif

$font-size-basic = 18px
$font-leading-basic = 1.4em

$font-size-h1 = 21px
$font-size-h2 = 21px
$font-size-h3 = 15px

html
  font-family: $font-light
  font-size: $font-size-basic
  line-height: $font-leading-basic
  letter-spacing: .02em
  
input, textarea, keygen, select, button
  letter-spacing: .02em

// HEADINGS

h1
  font-size: $font-size-h1

h2
  font-size: $font-size-h2

h3
  font-family: $font-semibold
  font-size: $font-size-h3
  background-color: $color-gray
  padding: $margin-tiny $margin-small
  color: $color-white-soft
  text-transform: uppercase

h1,h2,h3,h4,h5,h6
  line-height: $font-leading-basic

// LINKS

a,a:active,a:visited
  color:inherit
  text-decoration: none
    
// ICONS
    
.icon
  height: 18px
  padding-top: 4px
  float: right
  
.logo 
  margin: $margin-basic auto
  width: 140px

// TOOLBAR

#toolbar
  padding: $margin-small 0
  border-bottom: solid $border-width $color-light-gray
  background-color: $color-light-green
  text-transform: uppercase
  .col
    text-align: center

img.toolbar-logo
  width: 100px
  vertical-align: middle

// FORM

form
  padding: 0 $margin-small

input
  margin-bottom: $margin-small
  font-family: $font-light
  box-sizing: border-box
  padding: $margin-small
  border-radius: 4px
  width: 100%
  font-size: 1em
  border: solid $border-width $color-light-gray
  cursor: pointer
  &:focus
    outline: 0

::-webkit-input-placeholder
  text-align: right

input:-moz-placeholder
  text-align: right

input.button
  border-width: 0 0 $border-width*2 0
  border-color: $color-gray
  font-family: $font-bold

// SETTINGS

a.settings-button
  padding: $margin-small
  margin-bottom: $margin-small
  border: solid $color-light-gray
  border-width: $border-width 0
  display: block
  text-transform: uppercase 
  color: $color-gray

// CREATE TIMBRE

#map
  height: 0
  transition: height $speed-basic
  margin-bottom: $margin-small
  
// LOGIN SCENE
.login-logo
  margin: 0 auto
.login-form
  height: 0
  overflow: hidden
  opacity: 0

#login-scene
  background-color: $color-light-blue
  position: fixed
  width: 100%
  height: 100%
  z-index: -1
  top: 0
  
.street
  background-color: $color-dark-gray
  position: absolute
  width: 100%
  height: 50px
  bottom: 0
  left: 0
  border-top: 33px solid $color-light-gray
  
.curb 
  width: 100%
  background-color: $color-gray
  height: 5px 
  top: 0
  left: 0
  position: absolute
  
#cone 
  width: 25px
  position: absolute
  top: -55px
  left: 50%
  
#circle 
  width: 36px
  height: 36px
  border-radius: 36px
  position: absolute
  background-color: $color-light-pink
  bottom: -12px 
  left: -5px
  
.building
  width: 160px
  position: absolute
  height: 100%
  top: 0
  left: 50%
  margin-left: -80px
  background-color: $color-light-green
  
.left-building, .right-building
  opacity: .5

.left-building
  margin-left: -260px
  
.right-building
  margin-left: 100px
  
.window-row
  position: absolute
  left: 0
  width: 100%
  height: 10%
  
.window
  width: 22%
  height: 100%
  left: 10%
  background-color: $color-dark-green
  position: absolute
  &:nth-child(2n) 
    left: 39%
  &:nth-child(3n) 
    left: auto
    right: 10%
    
.open-window
  background-color: $color-light-blue
  overflow: hidden

.doors
  position: absolute
  bottom: 0
  width: 100%
  text-align: center
  height: 12%

.door 
  width: 25%
  height: 100%
  display: inline-block
  position: relative
  background-color: $color-light-gray

.music
  position: absolute
  top: 60%
  opacity: 0
  left: 50%
  -webkit-animation-name: show-hide
  -webkit-animation-duration: 2s
  -webkit-animateion-delay: .2s
  -webkit-animation-timing-function: linear
  
@keyframes show-hide {
  0% { 
    opacity: 0
    transform: rotate(5deg)
  }
  50% {
    opacity: 1
    transform: rotate(-5deg)
  }
  100% {
    opacity: 0
    transform: rotate(5deg)
  }
}
  
.note
  display: block
  margin-bottom: 10px
  &:nth-child(2n) 
    margin-left: -10px
    tranform: rotate(10deg)
  &:nth-child(3n) 
    margin-left: 10px
    tranform: rotate(-10deg)

